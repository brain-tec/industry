<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="account_tax_46_sale" model="account.tax">
        <field name="amount">35.0</field>
        <field name="amount_type">fixed</field>
        <field name="name">DEP 35</field>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="deposit_management.deposit_tax_group"/>
    </record>
    <record id="account_tax_46_purchase" model="account.tax">
        <field name="amount">35.0</field>
        <field name="amount_type">fixed</field>
        <field name="name">DEP 35</field>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="deposit_management.deposit_tax_group"/>
    </record>

    <function name="write" model="account.tax">
        <value eval="[ref('account_tax_46_sale'), ref('account_tax_46_purchase')]"/>
        <value model="account.tax" eval="
            {'ubl_cii_tax_category_code': 'O'}
            if obj().env['ir.module.module'].search_count([
                ('name', '=', 'account_edi_ubl_cii'),
                ('state', '=', 'installed')
            ], limit=1)
            else {}
        "/>
    </function>
</odoo>
