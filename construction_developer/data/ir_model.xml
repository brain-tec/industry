<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="x_work_item_model" model="ir.model">
      <field name="is_mail_thread" eval="True"/>
      <field name="is_mail_activity" eval="True"/>
      <field name="model">x_work_item</field>
      <field name="name">Work Item</field>
    </record>
    <record id="x_work_item_line_model" model="ir.model">
      <field name="model">x_work_item_line</field>
      <field name="name">Work Item Line</field>
    </record>
    <record id="model_x_remark_category" model="ir.model">
        <field name="name">Remark Category</field>
        <field name="model">x_remark_category</field>
    </record>
    <record id="model_x_remark_stage" model="ir.model">
        <field name="name">Remark Stage</field>
        <field name="model">x_remark_stage</field>
    </record>
    <record id="model_x_remark" model="ir.model">
        <field name="name">Remark</field>
        <field name="model">x_remark</field>
        <field name="is_mail_thread" eval="True"/>
        <field name="is_mail_activity" eval="True"/>
    </record>
</odoo>
