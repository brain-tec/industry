<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="automation_initialize_sales_order_line_sequence_on_sales_order_create" model="base.automation">
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_initialize_sales_order_line_sequence_on_sales_order_create')])]"/>
        <field name="trigger">on_create_or_write</field>
        <field name="name">Construction Developer: Initialize Sales Order Line Sequence on Sales Order create or write</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('sale.field_sale_order__order_line')])]"/>
    </record>
    <record id="automation_update_progress_increment_on_change" model="base.automation">
        <field name="name">Construction Developer: Update Sale Order Line Progress Increment on Quantity Increment change</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_sol_update_progress_increment_on_change')])]"/>
        <field name="trigger">on_change</field>
        <field name="on_change_field_ids" eval="[(6, 0, [ref('field_sale_order_line_x_quantity_increment')])]"/>
    </record>
    <record id="automation_update_quantity_increment_on_change" model="base.automation">
        <field name="name">Construction Developer: Update Sale Order Line Quantity Increment on Progress Increment change</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_sol_update_quantity_increment_on_change')])]"/>
        <field name="trigger">on_change</field>
        <field name="on_change_field_ids" eval="[(6, 0, [ref('field_sale_order_line_x_progress_increment')])]"/>
    </record>

    <record id="base_automation_on_product_from_wi_line_change" model="base.automation">
        <field name="model_id" ref="x_work_item_line_model" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_set_unit_cost_price_from_product')])]" />
        <field name="trigger">on_change</field>
        <field name="name">Construction: Work Item line - On product change</field>
        <field name="on_change_field_ids"
            eval="[(6, 0, [ref('x_product_id_field_x_work_item_line')])]" />
    </record>
    <record id="base_automation_on_product_from_wi_change" model="base.automation">
        <field name="model_id" ref="x_work_item_model" />
        <field name="action_server_ids" eval="[(6, 0, [ref('server_action_set_work_item_name')])]" />
        <field name="trigger">on_change</field>
        <field name="name">Construction: Work Item - On product change</field>
        <field name="on_change_field_ids"
            eval="[(6, 0, [ref('x_product_id_field_x_work_item')])]" />
    </record>
    <record id="base_automation_work_item_template_on_write" model="base.automation">
        <field name="model_id" ref="x_work_item_model" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_create_or_modify_wi_on_sol')])]" />
        <field name="trigger">on_create_or_write</field>
        <field name="filter_domain">[("x_is_template", "=", False)]</field>
        <field name="name">Construction: Work Item - On save of non template</field>
    </record>
    <record id="base_automation_work_item_on_write_unit_cost_price_change" model="base.automation">
        <field name="model_id" ref="x_work_item_model" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_update_product_cost'), ref('server_action_update_product_price')])]" />
        <field name="trigger">on_create_or_write</field>
        <field name="name">Construction: Work Item - On save and unit cost/price change</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('x_unit_cost_field_x_work_item'), ref('x_unit_price_field_x_work_item')])]"/>
    </record>
    <record id="base_automation_work_item_on_write" model="base.automation">
        <field name="model_id" ref="x_work_item_model" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_archive_old_wi_template')])]" />
        <field name="filter_domain">[("x_is_template", "!=", False), ("x_product_id", "!=", False), ("x_active", "!=", False)]</field>
        <field name="trigger">on_create_or_write</field>
        <field name="name">Construction: Work Item - On save</field>
    </record>
    <record id="base_automation_sol_on_write" model="base.automation">
        <field name="model_id" ref="sale.model_sale_order_line" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_create_associated_work_item')])]" />
        <field name="trigger">on_create_or_write</field>
        <field name="name">Construction: SOL - On save</field>
        <field name="filter_domain">[('x_line_work_item_id', '=', False), ('product_id.x_work_item_template_id', '!=', False)]</field>
    </record>
    <record id="base_automation_wi_template_without_product_on_write" model="base.automation">
        <field name="model_id" ref="x_work_item_model" />
        <field name="action_server_ids"
            eval="[(6, 0, [ref('server_action_create_product_for_wi')])]" />
        <field name="trigger">on_create_or_write</field>
        <field name="filter_domain">[('x_is_template', '!=', False), ('x_product_id', '=', False)]</field>
        <field name="name">Construction: Work Item - On save of work item template without product</field>
    </record>
    <!-- 
    this is needed to set a default stage based on the project's
    -->
    <record id="automation_x_remark_write_remark_stage_on_create_or_write" model="base.automation">
        <field name="name">Construction Developer: Write Remark Stages on Write</field>
        <field name="model_id" ref="model_x_remark"/>
        <field name="trigger">on_create_or_write</field>
        <field name="filter_domain">[('x_stage_id', '=', False)]</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_x_remark_write_remark_stage_on_create_or_write')])]"/>
    </record>
    <record id="automation_x_remark_generate_x_reference_on_create" model="base.automation">
        <field name="name">Construction Developer: Generate Remark References on Create</field>
        <field name="model_id" ref="model_x_remark"/>
        <field name="trigger">on_create</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_x_remark_generate_x_reference_on_create')])]"/>
    </record>
    <record id="automation_update_product_cost_and_vendor_list_from_purchase_order" model="base.automation">
        <field name="name">Construction: On Purchase Order confirmation</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_update_product_cost_and_vendor_list_from_purchase_order')])]"/>
        <field name="trigger">on_state_set</field>
        <field name="trg_selection_field_id" ref="purchase.selection__purchase_order__state__purchase"/>
        <field name="filter_domain">[('state', '=', 'purchase')]</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('purchase.field_purchase_order__state')])]"/>
    </record>
    <record id="automation_update_product_cost_and_vendor_list_from_vendor_bill" model="base.automation">
        <field name="name">Construction: On Vendor Bill confirmation</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_update_product_cost_and_vendor_list_from_vendor_bill')])]"/>
        <field name="trigger">on_state_set</field>
        <field name="trg_selection_field_id" ref="account.selection__account_move__state__posted"/>
        <field name="filter_pre_domain">[("move_type", "=", "in_invoice")]</field>
        <field name="filter_domain">[('state', '=', 'posted')]</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('account.field_account_move__state')])]"/>
    </record>
</odoo>
